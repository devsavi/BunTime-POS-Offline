{
  "name": "bun-time-pos",
  "private": true,
  "version": "1.0.0",
  "description": "Bun Time Point of Sale System",
  "author": {
    "name": "WhirlTech Solutions",
    "email": "info@whirltech.com"
  },
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "set ELECTRON=true && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "set ELECTRON=true && electron .",
    "electron:build": "set ELECTRON=true && vite build && electron-builder",
    "electron:package": "set ELECTRON=true && npm run build && electron-builder build --win"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "date-fns": "^2.30.0",
    "html2canvas": "^1.4.1",
    "html5-qrcode": "^2.3.8",
    "i18next": "^23.7.6",
    "jspdf": "^2.5.2",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "react-i18next": "^13.5.0",
    "react-router-dom": "^6.20.1",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.buntime.pos",
    "productName": "Bun Time POS",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "asar": false,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/buntime_icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Bun Time POS"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
